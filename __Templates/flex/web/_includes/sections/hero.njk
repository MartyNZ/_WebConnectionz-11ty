<section id="hero" class="hero d-flex align-items-center">

  <div class="container">
    <div class="row">
      <div class="col-lg-6 d-flex flex-column justify-content-center">
        <h1 data-aos="fade-up">{{hero.byline}}</h1>
        <div data-aos="fade-up" data-aos-delay="400">
          <p>{{hero.content|richtext|safe}}</p>
        </div>

        {% for btn in hero.buttons %}
        <div data-aos="fade-up" data-aos-delay="600">
          <div class="text-center text-lg-start">
            <a href="{{btn.btnLinkType}}{{btn.btnLink}}" class="btn-get-started scrollto d-inline-flex align-items-center justify-content-center align-self-center">
              <span>{{btn.btnText}}</span>
              <i class="bi bi-arrow-right"></i>
            </a>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="col-lg-6 hero-img" data-aos="zoom-out" data-aos-delay="200">
        <img src="{{hero.imageUrl}}" class="img-fluid" alt="">
      </div>
    </div>
  </div>

</section>